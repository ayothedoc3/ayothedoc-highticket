# ===========================================
# Environment Variables for Ayothedoc Vite App
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Frontend Variables (Vite prefixed with VITE_)
# -------------------------------------------
# EmailJS for contact form
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_TEMPLATE_ID=your_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# -------------------------------------------
# Backend Variables
# -------------------------------------------

# Google Gemini AI (Required for business audit)
GEMINI_API_KEY=your_gemini_api_key_here

# Resend Email API (Required for sending audit reports)
RESEND_API_KEY=your_resend_api_key_here

# -------------------------------------------
# Database - PostgreSQL (Optional, recommended)
# -------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/database
# or
POSTGRES_URL=postgresql://user:password@host:5432/database

# -------------------------------------------
# Airtable (Optional fallback for lead storage)
# -------------------------------------------
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_base_id
AIRTABLE_TABLE_NAME=Audit Leads

# -------------------------------------------
# Slack Notifications (Optional)
# -------------------------------------------
AUDIT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=3000
NODE_ENV=production
