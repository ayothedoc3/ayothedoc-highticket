# ===========================================
# Environment Variables for Ayothedoc Vite App
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Frontend Variables (Vite prefixed with VITE_)
# -------------------------------------------
# EmailJS for contact form and lead capture
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_TEMPLATE_ID=your_template_id
VITE_EMAILJS_CHECKLIST_TEMPLATE_ID=your_checklist_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# Google Analytics 4 (optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe payment links (optional)
# If unset, checkout buttons fall back to /contact
VITE_STRIPE_ROADMAP_LINK=
VITE_STRIPE_SPRINT_LINK=
VITE_STRIPE_CARE_LINK=

# -------------------------------------------
# Airtable (For lead storage)
# -------------------------------------------
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_base_id
AIRTABLE_TABLE_NAME=Leads

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=3000
NODE_ENV=production
